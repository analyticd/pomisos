<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>


<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox fx:controller="net.mikolak.pomisos.run.RunViewController" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <Text fx:id="currentPomodoroDisplay" styleClass="header" />
        <Text fx:id="timerText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="timeDisplay" />
        <HBox alignment="CENTER">
            <Button text="⏹" onAction="#stopPomodoro"/>
            <Button text="⧐" onAction="#pauseResume"/>
        </HBox>
    </children>
</VBox>
